<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:clipToPadding="false">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/user_bg_2x">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/recommend_back"
            android:layout_width="60px"
            android:layout_height="50px"
            android:layout_marginLeft="26px"
            android:layout_marginStart="26px"
            android:layout_marginTop="70px">

            <ImageView
                android:layout_width="18px"
                android:layout_height="33px"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_left_white"/>
        </com.zhy.autolayout.AutoFrameLayout>

        <TextView
            android:id="@+id/tv_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70px"
            android:text="工人推荐"
            android:textColor="@color/white"
            android:textSize="32px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="176px"
            android:orientation="horizontal">


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="374px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="88px"
                        android:layout_marginStart="88px"
                        android:text="我推荐的工人数"
                        android:textColor="@color/white"
                        android:textSize="22px"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_recommend_workerNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="88px"
                        android:layout_marginStart="88px"
                        android:text="27"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="48px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8px"
                        android:layout_marginStart="8px"
                        android:text="人"
                        android:textColor="@color/white"
                        android:textSize="26px"/>

                    <com.zhy.autolayout.AutoFrameLayout
                        android:id="@+id/tv_recommend_toRecommend"
                        android:layout_width="141px"
                        android:layout_height="51px"
                        android:layout_marginLeft="33px"
                        android:layout_marginStart="33px"
                        android:background="@drawable/btn_effect_bg_blue_light">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="我要推荐"
                            android:textColor="@color/white"
                            android:textSize="22px"/>

                    </com.zhy.autolayout.AutoFrameLayout>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/divider_blue_light"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="374px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_recommend_moneyNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60px"
                        android:layout_marginStart="60px"
                        android:text="佣金总数"
                        android:textColor="@color/white"
                        android:textSize="22px"/>

                    <com.zhy.autolayout.AutoFrameLayout
                        android:id="@+id/fl_recommend_takeMoney"
                        android:layout_width="80px"
                        android:layout_height="50px"
                        android:layout_marginLeft="120px"
                        android:layout_marginStart="120px"
                        android:layout_gravity="center">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="提现"
                            android:textColor="@color/blue_light"
                            android:textSize="22px"/>

                    </com.zhy.autolayout.AutoFrameLayout>


                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/tv_recommend_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27,750.00"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="48px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12px"
                            android:layout_marginStart="12px"
                            android:text="元"
                            android:textColor="@color/white"
                            android:textSize="26px"/>

                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoFrameLayout>



    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/background_color_linear" >
        <ImageView
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_marginRight="20px"
            android:layout_marginEnd="20px"
            android:layout_gravity="center"
            android:background="@drawable/use_recommend"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="我推荐的工人列表"
            android:textSize="28px"
            android:textColor="@color/text_color_black"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="42px"
            android:layout_marginEnd="42px"
            android:layout_gravity="center"
            android:text="所赚取佣金"
            android:textSize="26px"
            android:textColor="@color/text_color_black"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <!-- ******************************************************* -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recommend_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <include layout="@layout/empty_view"/>

    <!-- ******************************************************* -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20px"
        android:text="@string/copy_right"
        android:textSize="15px"
        android:textColor="@color/text_color_black_2"/>


</com.zhy.autolayout.AutoLinearLayout>