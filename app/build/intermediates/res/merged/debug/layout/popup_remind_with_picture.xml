<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/copy_cardview"
    android:id="@+id/popup_remind">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="513px"
        android:layout_height="900px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@drawable/corners_half_bg_red">

            <ImageView
                android:id="@+id/iv_popup_icon"
                android:layout_width="33px"
                android:layout_height="33px"
                android:layout_marginLeft="36px"
                android:layout_marginStart="36px"
                android:layout_marginTop="29px"
                android:background="@drawable/ic_error_white"/>

            <TextView
                android:id="@+id/tv_popup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="23px"
                android:layout_marginStart="23px"
                android:layout_marginTop="33px"
                android:maxWidth="320px"
                android:text="业主不确认"
                android:textSize="26px"
                android:textColor="@color/white"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="65px"
                android:layout_height="60px"
                android:layout_marginRight="26px"
                android:layout_marginEnd="26px"
                android:layout_marginTop="19px"
                android:id="@+id/ll_popup_close">

                <ImageView
                    android:layout_width="27px"
                    android:layout_height="27px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15px"
                    android:layout_marginStart="15px"
                    android:background="@drawable/ic_close_white"/>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_popup_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29px"
                android:layout_marginStart="29px"
                android:layout_marginTop="36px"
                android:text="不确认原因："
                android:textSize="24px"
                android:textColor="@color/text_color_black"/>

            <View
                android:layout_width="450px"
                android:layout_height="1dp"
                android:layout_marginTop="29px"
                android:layout_marginLeft="33px"
                android:layout_marginRight="30px"
                android:background="@drawable/line_dot" />

            <TextView
                android:id="@+id/tv_popup_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29px"
                android:layout_marginStart="29px"
                android:layout_marginTop="36px"
                android:maxWidth="432px"
                android:textSize="24px"
                android:textColor="@color/text_color_black"
                android:text="橱柜拐角放线不整齐，对角线不对，还有有根线已经断掉了，请再仔细查看下，弄完了我再确认！"/>

            <TextView
                android:id="@+id/tv_popup_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="316px"
                android:layout_marginStart="316px"
                android:layout_marginTop="38px"
                android:text="2015-05-09 17:58"
                android:textSize="20px"
                android:textColor="@color/text_color_black_2"/>

            <View
                android:layout_width="450px"
                android:layout_height="1dp"
                android:layout_marginTop="29px"
                android:layout_marginLeft="33px"
                android:layout_marginRight="30px"
                android:background="@drawable/line_dot" />
            
            <ImageView
                android:id="@+id/iv_popup_image"
                android:layout_width="340px"
                android:layout_height="340px"
                android:layout_gravity="center"
                android:layout_marginTop="24px"
                android:background="@drawable/stars" />

            <View
                android:layout_width="450px"
                android:layout_height="1dp"
                android:layout_marginTop="24px"
                android:layout_marginLeft="33px"
                android:layout_marginRight="30px"
                android:background="@drawable/line_dot" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_popup_ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27px"
                    android:layout_marginStart="27px"
                    android:layout_marginTop="26px"
                    android:layout_marginBottom="38px"
                    android:text="业主：张晓晓"
                    android:textSize="26px"
                    android:textColor="@color/text_color_black"/>

                <TextView
                    android:id="@+id/tv_popup_ownerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52px"
                    android:layout_marginStart="52px"
                    android:layout_marginTop="26px"
                    android:layout_marginBottom="38px"
                    android:text="13852141458"
                    android:textSize="26px"
                    android:textColor="@color/text_color_black"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="60px"
                    android:layout_height="70px"
                    android:layout_marginLeft="32px"
                    android:layout_marginStart="32px"
                    android:layout_marginRight="26px"
                    android:layout_marginEnd="26px"
                    android:layout_marginTop="8px"
                    android:id="@+id/ll_popup_phoneIcon">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15px"
                        android:layout_marginStart="15px"
                        android:background="@drawable/ic_phone"/>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>



        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>