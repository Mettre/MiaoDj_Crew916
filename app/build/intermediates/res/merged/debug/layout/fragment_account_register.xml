<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="50px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_gravity="center"
            android:textSize="26px"
            android:textColor="@color/text_color_black"
            android:text="手机号（+86）"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="460px"
            android:layout_height="88px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="phone"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="输入手机号"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_gravity="center"
            android:textSize="28px"
            android:textColor="@color/text_color_black"
            android:text="验证码"/>

        <EditText
            android:id="@+id/et_authCode"
            android:layout_width="412px"
            android:layout_height="88px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="输入验证码"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <Button
            android:id="@+id/btn_getCode"
            android:layout_width="141px"
            android:layout_height="61px"
            android:layout_gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            android:textSize="22px"
            android:background="@drawable/btn_effect_bg_code"/>


        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_gravity="center"
            android:textSize="26px"
            android:textColor="@color/text_color_black"
            android:text="密码"/>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="530px"
            android:layout_height="88px"
            android:layout_marginLeft="50px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:hint="输入密码"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_gravity="center"
            android:textSize="26px"
            android:textColor="@color/text_color_black"
            android:text="确认密码"/>


        <EditText
            android:id="@+id/et_password_confirm"
            android:layout_width="530px"
            android:layout_height="88px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:hint="确认密码"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_invitation_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_gravity="center"
            android:textSize="26px"
            android:textColor="@color/text_color_black"
            android:text="邀请码"/>

        <EditText
            android:id="@+id/et_invite_code"
            android:layout_width="560px"
            android:layout_height="88px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="输入邀请码"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>



    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        android:layout_marginRight="20px"
        android:layout_marginEnd="20px"
        android:layout_marginTop="31px"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="28px"
        android:background="@drawable/btn_effect_bg_blue"
        android:enabled="false"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/register_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21px"
            android:layout_marginStart="21px"
            android:layout_marginTop="20px"
            android:textSize="22px"
            android:text="@string/login_protocol"
            android:textColor="@color/text_color_black_light" />

    </com.zhy.autolayout.AutoLinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20px"
        android:text="@string/copy_right"
        android:textSize="15px"
        android:textColor="@color/text_color_orange_light"/>

</com.zhy.autolayout.AutoLinearLayout>