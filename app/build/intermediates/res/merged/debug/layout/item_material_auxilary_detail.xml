<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="172px"
    android:layout_marginLeft="24px"
    android:layout_marginStart="24px"
    android:layout_marginRight="25px"
    android:layout_marginEnd="25px"
    android:layout_marginBottom="35px"
    android:background="@drawable/copy_cardview">



    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_auxiliary_portrait"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="60px"
        android:layout_marginStart="60px"
        android:layout_marginTop="36px"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/logo_white"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:failureImage="@drawable/img_fail"
        fresco:failureImageScaleType="focusCrop"
        fresco:backgroundImage="@color/colorPrimary1" />

    <TextView
        android:id="@+id/tv_auxiliary_name_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="194px"
        android:layout_marginStart="194px"
        android:layout_marginTop="41px"
        android:maxWidth="250px"
        android:singleLine="true"
        android:text="搅拌黄沙"
        android:textSize="26px"
        android:textColor="@color/text_color_black_3"/>
    <TextView
        android:id="@+id/tv_auxiliary_specs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="194px"
        android:layout_marginStart="194px"
        android:layout_marginTop="89px"
        android:text="直径7.5mm"
        android:textSize="22px"
        android:textColor="@color/text_color_black_3"/>

    <TextView
        android:id="@+id/tv_auxiliary_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="448px"
        android:layout_marginStart="448px"
        android:layout_marginTop="41px"
        android:maxWidth="135px"
        android:text="天林"
        android:textSize="26px"
        android:textColor="@color/text_color_black_3"/>

    <TextView
        android:id="@+id/tv_auxiliary_specs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450px"
        android:layout_marginStart="450px"
        android:layout_marginTop="89px"
        android:text="- -/卷"
        android:textSize="22px"
        android:textColor="@color/text_color_black_3"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="630px"
        android:layout_marginStart="630px"
        android:layout_marginTop="45px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_auxiliary_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_black_3"
            android:textSize="26px"
            android:text="8"/>

        <TextView
            android:id="@+id/tv_auxiliary_count_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16px"
            android:layout_marginLeft="16px"
            android:maxWidth="135px"
            android:text="包"
            android:textSize="26px"
            android:textColor="@color/text_color_black_3"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="580px"
        android:layout_marginStart="580px"
        android:layout_marginTop="89px"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_auxiliary_status"
            android:layout_width="29px"
            android:layout_height="29px"
            android:background="@drawable/ic_ok_green"
            android:enabled="false"
            android:button="@null"
            />

        <TextView
            android:id="@+id/tv_auxiliary_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11px"
            android:layout_marginLeft="11px"
            android:maxWidth="135px"
            android:layout_gravity="center"
            android:text="配送中"
            android:textStyle="bold"
            android:textSize="22px"
            android:textColor="@color/un_press_color"/>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoFrameLayout>