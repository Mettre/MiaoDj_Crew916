<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/copy_cardview"
    android:id="@+id/popup_recommend">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="601px"
        android:layout_height="900px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="102px">

            <ImageView
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_marginLeft="43px"
                android:layout_marginStart="43px"
                android:layout_marginTop="43px"
                android:background="@drawable/use_recommend_worker"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15px"
                android:layout_marginStart="15px"
                android:layout_marginTop="45px"
                android:text="我要推荐工人"
                android:textSize="28px"
                android:textColor="@color/blue_3"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="65px"
                android:layout_height="60px"
                android:layout_marginRight="26px"
                android:layout_marginEnd="26px"
                android:layout_marginTop="32px"
                android:id="@+id/ll_popup_close">

                <ImageView
                    android:layout_width="27px"
                    android:layout_height="27px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15px"
                    android:layout_marginStart="15px"
                    android:background="@drawable/ic_close_gray"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="520px"
            android:layout_height="1dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@color/divider_gray" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29px"
                    android:layout_marginStart="29px"
                    android:text="工人姓名："
                    android:textSize="24px"
                    android:textColor="@color/text_color_black_2"/>

                <ImageView
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_marginLeft="15px"
                    android:layout_marginStart="15px"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_red_star"/>
            </com.zhy.autolayout.AutoLinearLayout>


            <EditText
                android:id="@+id/et_popup_name"
                android:layout_width="521px"
                android:layout_height="71px"
                android:layout_marginLeft="41px"
                android:layout_marginStart="41px"
                android:layout_marginTop="23px"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:maxWidth="432px"
                android:textSize="28px"
                android:textColor="@color/colorPrimary1"
                android:background="@color/gray_white"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29px"
                    android:layout_marginStart="29px"
                    android:text="工人手机号："
                    android:textSize="24px"
                    android:textColor="@color/text_color_black_2"/>

                <ImageView
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:layout_marginLeft="15px"
                    android:layout_marginStart="15px"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_red_star"/>
            </com.zhy.autolayout.AutoLinearLayout>


            <EditText
                android:id="@+id/et_popup_phone"
                android:layout_width="521px"
                android:layout_height="71px"
                android:layout_marginLeft="41px"
                android:layout_marginStart="41px"
                android:layout_marginTop="23px"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:maxWidth="432px"
                android:textSize="28px"
                android:textColor="@color/colorPrimary1"
                android:background="@color/gray_white"/>

            <Button
                android:id="@+id/popup_btn"
                android:layout_width="521px"
                android:layout_height="89px"
                android:layout_marginLeft="40px"
                android:layout_marginStart="40px"
                android:layout_marginTop="42px"
                android:text="提交"
                android:background="@drawable/btn_effect_bg_blue"
                android:textColor="@android:color/white"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44px"
                android:layout_marginStart="44px"
                android:layout_marginRight="44px"
                android:layout_marginEnd="44px"
                android:layout_marginTop="39px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:textColor="@color/text_color_black_2"
                    android:gravity="center_vertical"
                    android:textSize="20px"
                    android:text="@string/recommend_text_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:maxWidth="660px"
                    android:textColor="@color/text_color_black_2"
                    android:gravity="center_vertical"
                    android:textSize="20px"
                    android:text="@string/recommend_text_content1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:maxWidth="670px"
                    android:textColor="@color/text_color_black_2"
                    android:gravity="center_vertical"
                    android:textSize="20px"
                    android:text="@string/recommend_text_content2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:maxWidth="670px"
                    android:textColor="@color/text_color_black_2"
                    android:gravity="center_vertical"
                    android:textSize="20px"
                    android:text="@string/recommend_text_content3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:maxWidth="680px"
                    android:textColor="@color/text_color_black_2"
                    android:gravity="center_vertical"
                    android:textSize="20px"
                    android:text="@string/recommend_text_content3_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:maxWidth="680px"
                    android:textColor="@color/text_color_black_2"
                    android:gravity="center_vertical"
                    android:textSize="20px"
                    android:text="@string/recommend_text_content3_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6px"
                    android:maxWidth="680px"
                    android:textColor="@color/text_color_black_2"
                    android:gravity="center_vertical"
                    android:textSize="20px"
                    android:text="@string/recommend_text_content3_3"/>

            </com.zhy.autolayout.AutoLinearLayout>



        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>