<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <View
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="?attr/colorPrimary" />

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36px"
        android:layout_marginStart="36px"
        android:layout_marginTop="55px"
        android:textSize="24px"
        android:textColor="@color/text_color_black_3"
        android:text="请输入您的意见或反馈内容"/>


    <EditText
        android:id="@+id/et_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginTop="17px"
        android:padding="15dp"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:hint="说点什么吧"
        android:textSize="26px"
        android:textColor="@color/text_color_black"
        android:background="@drawable/layout_edit_text_white"/>

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="680px"
        android:layout_height="89px"
        android:layout_marginLeft="35px"
        android:layout_marginStart="35px"
        android:layout_marginRight="35px"
        android:layout_marginEnd="35px"
        android:layout_marginTop="33px"
        android:textSize="28px"
        android:textColor="@color/white"
        android:text="提交"
        android:background="@drawable/btn_effect_bg_blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20px"
        android:text="@string/copy_right"
        android:textSize="15px"
        android:textColor="@color/text_color_orange_light"/>

</com.zhy.autolayout.AutoLinearLayout>