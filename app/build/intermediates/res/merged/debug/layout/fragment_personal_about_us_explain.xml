<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <View
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="?attr/colorPrimary" />

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/about_sdv"
            android:layout_width="match_parent"
            android:layout_height="300px"

            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/banner_p73"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:progressBarImage="@drawable/img_load"
            fresco:progressBarImageScaleType="focusCrop"
            fresco:progressBarAutoRotateInterval="3000"
            fresco:failureImage="@drawable/img_fail"
            fresco:failureImageScaleType="focusCrop"
            fresco:retryImage="@drawable/img_retry"
            fresco:retryImageScaleType="focusCrop" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55px"
            android:layout_marginStart="55px"
            android:layout_marginRight="55px"
            android:layout_marginEnd="55px"
            android:layout_marginTop="58px"
            android:layout_gravity="center"
            android:maxWidth="640px"
            android:textSize="24px"
            android:textColor="@color/text_color_black"
            android:text="喵咚家在此声明"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23px"
            android:layout_gravity="center"
            android:maxWidth="640px"
            android:textSize="24px"
            android:textColor="@color/text_color_black"
            android:text="您通过本软件参加的商业活动"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23px"
            android:layout_gravity="center"
            android:maxWidth="640px"
            android:textSize="24px"
            android:textColor="@color/text_color_black"
            android:text="与xxxxx无关"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15px"
            android:layout_marginBottom="20px"
            android:text="@string/copy_right"
            android:textSize="15px"
            android:textColor="@color/text_color_orange_light"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>