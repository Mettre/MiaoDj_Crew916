<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <View
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="?attr/colorPrimary" />

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="50px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="33px"
            android:layout_height="33px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:layout_gravity="center"
            android:textSize="28px"
            android:textColor="@color/text_color_black"
            android:text="新手机号（+86）"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="435px"
            android:layout_height="88px"
            android:paddingLeft="27px"
            android:paddingRight="20px"
            android:inputType="phone"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="输入手机号"
            android:textSize="26px"
            android:background="@color/white"/>


        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="33px"
            android:layout_height="33px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:layout_gravity="center"
            android:textSize="28px"
            android:textColor="@color/text_color_black"
            android:text="验证码"/>



            <EditText
                android:id="@+id/et_authCode"
                android:layout_width="412px"
                android:layout_height="88px"
                android:paddingLeft="27px"
                android:paddingRight="20px"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="输入验证码"
                android:textSize="26px"
                android:background="@color/white"/>

            <Button
                android:id="@+id/phone_bt_getCode"
                android:layout_width="121px"
                android:layout_height="51px"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:textColor="#FFFFFF"
                android:textSize="20px"
                android:background="@drawable/btn_effect_bg_code"/>


        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        android:layout_marginRight="20px"
        android:layout_marginEnd="20px"
        android:layout_marginTop="31px"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="28px"
        android:background="@drawable/btn_effect_bg_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginStart="25px"
        android:layout_marginTop="25px"
        android:textSize="20px"
        android:textColor="@color/text_color_gray"
        android:text="手机号更改后，您将用新的手机号登录系统"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20px"
        android:text="@string/copy_right"
        android:textSize="15px"
        android:textColor="@color/text_color_orange_light"/>

</com.zhy.autolayout.AutoLinearLayout>