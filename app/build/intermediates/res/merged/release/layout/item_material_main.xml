<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_light">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64px"
        android:layout_marginStart="64px"
        android:layout_marginTop="31px">

        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地板"
            android:textSize="26px"
            android:textColor="@color/text_color_black_3"/>

        <TextView
            android:id="@+id/tv_material_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_marginStart="8px"
            android:layout_weight="1"
            android:text="木地板"
            android:textSize="20px"
            android:textColor="@color/text_color_black_3"/>

        <TextView
            android:id="@+id/tv_material_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:layout_marginLeft="8px"
            android:layout_marginStart="8px"
            android:layout_marginRight="66px"
            android:gravity="center"
            android:text="客厅"
            android:textSize="20px"
            android:textColor="@color/text_color_black_3"
            android:background="@color/text_color_gray_2"/>

    </com.zhy.autolayout.AutoLinearLayout>



    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_material_portrait"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="64px"
        android:layout_marginStart="64px"
        android:layout_marginTop="92px"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/logo_white"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:failureImage="@drawable/img_fail"
        fresco:failureImageScaleType="focusCrop"
        fresco:backgroundImage="@color/colorPrimary1" />

    <TextView
        android:id="@+id/tv_material_name_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200px"
        android:layout_marginStart="200px"
        android:layout_marginTop="93px"
        android:text="马可波罗大地砖"
        android:maxWidth="127px"
        android:singleLine="true"
        android:textSize="26px"
        android:textColor="@color/text_color_black_3"/>
    <TextView
        android:id="@+id/tv_material_name_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200px"
        android:layout_marginStart="200px"
        android:layout_marginTop="131px"
        android:text="YG803001"
        android:textSize="20px"
        android:textColor="@color/text_color_black_3"/>

    <TextView
        android:id="@+id/tv_material_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="394px"
        android:layout_marginStart="394px"
        android:layout_marginTop="97px"
        android:maxWidth="135px"
        android:text="大自然"
        android:textSize="26px"
        android:textColor="@color/text_color_black_3"/>

    <TextView
        android:id="@+id/et_material_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="555px"
        android:layout_marginStart="555px"
        android:layout_marginTop="98px"
        android:textColor="@color/text_color_gray"
        android:textSize="26px"
        android:text="800*130*12"/>
    
    <ImageView
        android:layout_width="15px"
        android:layout_height="27px"
        android:layout_marginLeft="654px"
        android:layout_marginStart="654px"
        android:layout_marginTop="153px"
        android:background="@drawable/ic_arrow_right2"/>

    <View
        android:layout_width="636px"
        android:layout_height="1dp"
        android:layout_marginTop="230px"
        android:layout_marginLeft="56px"
        android:layout_marginRight="56px"
        android:background="@drawable/line_dot" />

</com.zhy.autolayout.AutoFrameLayout>