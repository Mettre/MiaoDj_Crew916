<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/copy_cardview"
    android:id="@+id/popup_auxi_sign_for">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="601px"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="102px">

            <ImageView
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_marginLeft="43px"
                android:layout_marginStart="43px"
                android:layout_marginTop="43px"
                android:background="@drawable/ic_selection_2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15px"
                android:layout_marginStart="15px"
                android:layout_marginTop="45px"
                android:text="货物签收"
                android:textSize="28px"
                android:textColor="@color/blue_3"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_popup_close"
                android:layout_width="65px"
                android:layout_height="60px"
                android:layout_marginRight="26px"
                android:layout_marginEnd="26px"
                android:layout_marginTop="32px">

                <ImageView
                    android:layout_width="27px"
                    android:layout_height="27px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15px"
                    android:layout_marginStart="15px"
                    android:background="@drawable/ic_close_gray"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="520px"
            android:layout_height="0.6dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@color/divider_color" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="521px"
                android:layout_height="81px"
                android:layout_marginLeft="41px"
                android:layout_marginStart="41px"
                android:layout_marginTop="27px"
                android:orientation="horizontal"
                android:background="@color/gray_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26px"
                    android:layout_marginStart="26px"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="上传签收单图片"
                    android:textSize="24px"
                    android:textColor="@color/text_color_black_2"/>


                <ImageView
                    android:id="@+id/iv_popup_pic_upload"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:layout_marginLeft="24px"
                    android:layout_marginStart="24px"
                    android:layout_marginRight="26px"
                    android:layout_marginEnd="26px"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_add"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_popup_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="26px"
                    android:layout_marginEnd="26px"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_popup_pic"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/iv_popup_pic_delete"
                        android:layout_width="35px"
                        android:layout_height="35px"
                        android:layout_marginLeft="24px"
                        android:layout_marginStart="24px"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_auxi_delete"/>
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center">

                <TextView
                    android:id="@+id/downloadSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:text="--M/--M"
                    android:textSize="10sp"/>
                <cn.chenhai.miaodj_monitor.view_custom.NumberProgressBar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pbProgress"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:progress_reached_bar_height="1.5dp"
                    app:progress_reached_color="#3498DB"
                    app:progress_text_color="#3498DB"
                    app:progress_text_size="10sp"
                    app:progress_unreached_bar_height="0.75dp"
                    app:progress_unreached_color="#CCCCCC"/>

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="right"
                    android:textColor="@color/colorAccent1"
                    android:textSize="12sp"
                    android:text="未上传"/>
            </com.zhy.autolayout.AutoLinearLayout>



            <Button
                android:id="@+id/btn_popup_done"
                android:layout_width="521px"
                android:layout_height="89px"
                android:layout_marginLeft="40px"
                android:layout_marginStart="40px"
                android:layout_marginTop="12px"
                android:text="提交"
                android:background="@drawable/btn_effect_bg_blue"
                android:textColor="@android:color/white"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43px"
                android:layout_marginStart="43px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginTop="34px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12px"
                    android:textColor="@color/text_color_black_light"
                    android:gravity="center_vertical"
                    android:textSize="18px"
                    android:text="货物签收说明："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12px"
                    android:maxWidth="660px"
                    android:textColor="@color/text_color_black_light"
                    android:gravity="center_vertical"
                    android:textSize="18px"
                    android:text="请仔细检查货物数量及损坏情况，在纸质签收单上签字确认；"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="42px"
                    android:maxWidth="670px"
                    android:textColor="@color/text_color_black_light"
                    android:gravity="center_vertical"
                    android:textSize="18px"
                    android:text="拍照后上传签收单图片。"/>


            </com.zhy.autolayout.AutoLinearLayout>



        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>