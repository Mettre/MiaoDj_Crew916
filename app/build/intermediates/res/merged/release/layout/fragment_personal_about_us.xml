<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <View
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="?attr/colorPrimary" />

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/about_sdv"
            android:layout_width="144px"
            android:layout_height="134px"

            android:layout_marginTop="70px"
            android:layout_gravity="center"

            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/logo_color"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:progressBarImage="@drawable/img_load"
            fresco:progressBarImageScaleType="focusCrop"
            fresco:progressBarAutoRotateInterval="3000"
            fresco:failureImage="@drawable/img_fail"
            fresco:failureImageScaleType="focusCrop"
            fresco:retryImage="@drawable/img_retry"
            fresco:retryImageScaleType="focusCrop"
            fresco:fadeDuration="3000"
            fresco:roundAsCircle="false"
            fresco:roundingBorderColor="@color/colorAccent1" />

        <TextView
            android:id="@+id/tv_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:layout_gravity="center"
            android:textSize="22px"
            android:textColor="@color/text_color_black_light"
            android:text="v 1.0.0"/>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_about_team"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="100px"
            android:orientation="horizontal"
            android:background="@drawable/layout_selecter">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginStart="32px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="28px"
                android:textColor="@color/text_color_black"
                android:text="喵咚家团队"/>

            <ImageView
                android:layout_width="15px"
                android:layout_height="26px"
                android:layout_marginRight="31px"
                android:layout_marginEnd="31px"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_right2"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/ll_about_explain"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="21px"
            android:orientation="horizontal"
            android:background="@drawable/layout_selecter">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginStart="32px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="28px"
                android:textColor="@color/text_color_black"
                android:text="特别说明"/>

            <ImageView
                android:layout_width="15px"
                android:layout_height="26px"
                android:layout_marginRight="31px"
                android:layout_marginEnd="31px"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_right2"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_about_evaluate"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="21px"
            android:orientation="horizontal"
            android:background="@drawable/layout_selecter">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginStart="32px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="28px"
                android:textColor="@color/text_color_black"
                android:text="去给好评"/>

            <ImageView
                android:layout_width="15px"
                android:layout_height="26px"
                android:layout_marginRight="31px"
                android:layout_marginEnd="31px"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_right2"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_about_contactUs"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="21px"
            android:orientation="horizontal"
            android:background="@drawable/layout_selecter">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginStart="32px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="28px"
                android:textColor="@color/text_color_black"
                android:text="联系我们"/>

            <ImageView
                android:layout_width="15px"
                android:layout_height="26px"
                android:layout_marginRight="31px"
                android:layout_marginEnd="31px"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_right2"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15px"
            android:layout_marginBottom="20px"
            android:text="@string/copy_right"
            android:textSize="15px"
            android:textColor="@color/text_color_orange_light"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>