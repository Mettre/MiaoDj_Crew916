<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="166px"
    android:orientation="vertical">

    <cn.chenhai.miaodj_monitor.view_custom.AutoCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_cardview"
        android:layout_width="match_parent"
        android:layout_height="141px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="5dp">
        <!--android:foreground="?selectableItemBackground"-->


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:id="@+id/point_line_up"
                    android:layout_width="3px"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="76px"
                    android:layout_marginStart="76px"
                    android:background="@color/color_green_ok" />
                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="47px"
                    android:layout_marginStart="47px">
                    <ImageView
                        android:id="@+id/point_circle"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:background="@drawable/ic_point_nostart" />
                    <TextView
                        android:id="@+id/point_circle_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="01"
                        android:textSize="28px"
                        android:textColor="@color/white"/>
                </com.zhy.autolayout.AutoFrameLayout>
                <View
                    android:id="@+id/point_line_down"
                    android:layout_width="3px"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="76px"
                    android:layout_marginStart="76px"
                    android:background="@color/color_green_ok" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35px"
                    android:layout_marginLeft="33px"
                    android:layout_marginStart="33px"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/point_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="330px"
                        android:textColor="@color/text_color_gray_2"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="32px"
                        android:text="进场"/>
                    
                    <!--<ImageView-->
                        <!--android:id="@+id/point_iv_status"-->
                        <!--android:layout_width="81px"-->
                        <!--android:layout_height="32px"-->
                        <!--android:layout_marginLeft="21px"-->
                        <!--android:layout_marginStart="21px"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:background="@drawable/point_status_1"/>-->

                    <!--<Button-->
                        <!--android:id="@+id/point_btn_status"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="32px"-->
                        <!--android:layout_marginLeft="21px"-->
                        <!--android:layout_marginStart="21px"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:paddingLeft="8px"-->
                        <!--android:paddingRight="8px"-->
                        <!--android:background="@drawable/point_status_1"-->
                        <!--android:text="未开始"-->
                        <!--android:textSize="16px"-->
                        <!--android:textColor="@color/white"/>-->
                    <TextView
                        android:id="@+id/point_tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="32px"
                        android:layout_marginLeft="21px"
                        android:layout_marginStart="21px"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="12px"
                        android:paddingRight="12px"
                        android:background="@drawable/text_bg_gray"
                        android:text="未开始"
                        android:textSize="16px"
                        android:textColor="@color/white"/>

                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    android:id="@+id/point_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="420px"
                    android:layout_marginLeft="33px"
                    android:layout_marginStart="33px"
                    android:layout_marginTop="19px"
                    android:textColor="@color/text_color_gray_2"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="20px"
                    android:text="预计开始日期 2016-05-12"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/point_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginStart="20px"
                android:textColor="@color/text_color_black_2"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textSize="20px"
                android:text="未评价"/>

            <ImageView
                android:id="@+id/point_arrow"
                android:layout_width="18px"
                android:layout_height="32px"
                android:layout_marginLeft="14px"
                android:layout_marginStart="14px"
                android:layout_marginRight="36px"
                android:layout_marginEnd="36px"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_right2"/>

        </com.zhy.autolayout.AutoLinearLayout>


    </cn.chenhai.miaodj_monitor.view_custom.AutoCardView>

    <View
        android:id="@+id/point_line_out"
        android:layout_width="3px"
        android:layout_height="25px"
        android:layout_weight="1"
        android:layout_marginLeft="101px"
        android:layout_marginStart="101px"
        android:background="@color/color_green_ok" />

</com.zhy.autolayout.AutoLinearLayout>