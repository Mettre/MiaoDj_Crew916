<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_selection_Material"
        android:layout_width="701px"
        android:layout_height="89px"
        android:layout_marginLeft="24px"
        android:layout_marginStart="24px"
        android:layout_marginRight="25px"
        android:layout_marginEnd="25px"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:background="@drawable/copy_cardview">

        <TextView
            android:id="@+id/tv_selection_Material_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37px"
            android:layout_marginStart="37px"
            android:layout_marginTop="32px"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimary1"
            android:textSize="26px"
            android:text="主材内容（8）"/>

        <TextView
            android:id="@+id/tv_selection_Material_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginStart="15px"
            android:layout_marginTop="32px"
            android:singleLine="true"
            android:textColor="@color/colorPrimary1"
            android:textSize="26px"
            android:text="数量待确认"/>

        <ImageView
            android:id="@+id/iv_selection_Material_arrow"
            android:layout_width="27px"
            android:layout_height="27px"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_marginRight="35px"
            android:layout_marginEnd="35px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_arrow_down2"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <cn.chenhai.miaodj_monitor.ExpandableLayout.ExpandableLinearLayout
        android:id="@+id/selection_expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:ael_duration="400"
        app:ael_expanded="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/selection_recyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </cn.chenhai.miaodj_monitor.ExpandableLayout.ExpandableLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>