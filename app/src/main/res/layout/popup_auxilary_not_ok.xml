<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/copy_cardview"
    android:id="@+id/popup_auxi_not_ok">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="600px"
        android:layout_height="681px">

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="49px"
            android:layout_marginStart="49px"
            android:layout_marginTop="44px"
            android:background="@drawable/ic_status_3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:layout_marginStart="90px"
            android:layout_marginTop="45px"
            android:text="有问题，不确认"
            android:textSize="28px"
            android:textColor="@color/btn_yellow"/>

        <FrameLayout
            android:id="@+id/pop_img_close"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_marginLeft="513px"
            android:layout_marginStart="513px"
            android:layout_marginTop="37px">

            <ImageButton

                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:background="@drawable/ic_apply_close" />

        </FrameLayout>




        <View
            android:layout_width="520px"
            android:layout_height="1px"
            android:layout_marginLeft="41px"
            android:layout_marginStart="41px"
            android:layout_marginTop="102px"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginStart="45px"
            android:layout_marginTop="146px"
            android:text="请输入不确定原因"
            android:textSize="24px"
            android:textColor="@color/text_color_black_light" />

        <ImageView
            android:layout_width="11px"
            android:layout_height="11px"
            android:layout_marginLeft="250px"
            android:layout_marginStart="250px"
            android:layout_marginTop="153px"
            android:background="@drawable/ic_red_star" />

        <EditText
            android:id="@+id/pop_et_content"
            android:layout_width="521px"
            android:layout_height="211px"
            android:layout_marginTop="194px"
            android:layout_marginLeft="40px"
            android:layout_marginStart="40px"
            android:padding="10dp"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minLines="8"
            android:maxLines="10"
            android:scrollbars="vertical"

            android:textSize="22px"
            android:textColor="@color/text_color_black"
            android:background="@drawable/layout_edit_text"/>


        <Button
            android:id="@+id/pop_btn_done"
            style="?android:textAppearanceSmall"
            android:layout_width="521px"
            android:layout_height="89px"
            android:layout_marginLeft="40px"
            android:layout_marginStart="40px"
            android:layout_marginTop="442px"
            android:text="提交"
            android:background="@drawable/btn_effect_bg_yellow"
            android:textColor="@android:color/white"
            android:textSize="28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginStart="45px"
            android:layout_marginTop="571px"
            android:text="当对辅材辅料的品类或数量有异议，可在此输入原因；"
            android:textSize="20px"
            android:textColor="@color/text_color_black_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginStart="45px"
            android:layout_marginTop="605px"
            android:text="门店会在修改后再次让你确认！"
            android:textSize="20px"
            android:textColor="@color/text_color_black_light" />

    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoFrameLayout>