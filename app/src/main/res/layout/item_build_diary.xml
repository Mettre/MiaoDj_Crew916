<?xml version="1.0" encoding="utf-8"?>
<cn.chenhai.miaodj_monitor.ui.view_custom.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2px"
    android:layout_marginLeft="21px"
    android:layout_marginRight="22px"
    android:layout_marginTop="27px"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp">

    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="108px"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_diary_portrait"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginEnd="14px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="14px"
                android:layout_marginStart="30px"
                android:layout_marginTop="20px"
                fresco:actualImageScaleType="focusCrop"
                fresco:backgroundImage="@color/colorPrimary1"
                fresco:failureImage="@drawable/img_fail"
                fresco:failureImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/img_circle"
                fresco:placeholderImageScaleType="focusCrop"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@color/colorAccent1" />

            <TextView
                android:id="@+id/tv_diary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34px"
                android:gravity="center_vertical"
                android:maxWidth="590px"
                android:singleLine="true"
                android:text="张莉莉"
                android:textColor="@color/black"
                android:textSize="22px" />

            <TextView
                android:id="@+id/tv_diary_type"
                android:layout_width="62px"
                android:layout_height="25px"
                android:layout_marginLeft="10px"
                android:layout_marginStart="10px"
                android:layout_marginTop="31px"
                android:background="@drawable/btn_effect_bg_blue"
                android:gravity="center"
                android:text="施工员"
                android:textColor="@color/white"
                android:textSize="14px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginStart="10px"
                android:layout_marginTop="52px"
                android:text="第"
                android:textColor="@color/text_color_black_3"
                android:textSize="18px" />

            <TextView
                android:id="@+id/tv_diary_dateNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginStart="10px"
                android:layout_marginTop="52px"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorPrimary1"
                android:textSize="32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="35px"
                android:layout_marginStart="10px"
                android:layout_marginTop="52px"
                android:gravity="center"
                android:text="天"
                android:textColor="@color/text_color_black_3"
                android:textSize="18px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="642px"
            android:layout_height="1dp"
            android:layout_marginLeft="31px"
            android:layout_marginRight="28px"
            android:background="@drawable/line_dot" />

        <TextView
            android:id="@+id/tv_diary_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginStart="45px"
            android:layout_marginTop="24px"
            android:gravity="center_vertical"
            android:maxWidth="616px"
            android:text="墙面涂料第一面已经粉刷完毕，拐角处有预留孔位。明天即将安装吊顶，一切尽在我掌握中！"
            android:textColor="@color/text_color_black_2"
            android:textSize="22px" />

        <TextView
            android:id="@+id/tv_diary_notWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginStart="45px"
            android:layout_marginTop="24px"
            android:gravity="center_vertical"
            android:maxWidth="616px"
            android:text="【未写日志】"
            android:textColor="@color/text_color_red"
            android:textSize="22px"
            android:visibility="gone" />


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoFrameLayout
                android:id="@+id/linear_diary_edit"
                android:layout_width="122px"
                android:layout_height="52px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="36px"
                android:layout_marginLeft="43px"
                android:layout_marginStart="43px"
                android:layout_marginTop="40px"
                android:background="@drawable/layout_selecter_deep"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24px"
                    android:layout_marginStart="24px"
                    android:background="@drawable/ic_edit_pen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="52px"
                    android:layout_marginStart="52px"
                    android:singleLine="true"
                    android:text="编辑"
                    android:textColor="@color/text_color_black"
                    android:textSize="22px" />

            </com.zhy.autolayout.AutoFrameLayout>


            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8px"
                android:layout_marginRight="6px"
                android:layout_toLeftOf="@+id/tv_diary_time"
                android:background="@drawable/ic_clock" />

            <TextView
                android:id="@+id/tv_diary_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="33px"
                android:layout_marginRight="33px"
                android:singleLine="true"
                android:text="2016-06-12"
                android:textColor="@color/text_color_black_3"
                android:textSize="20px" />


        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</cn.chenhai.miaodj_monitor.ui.view_custom.AutoCardView>