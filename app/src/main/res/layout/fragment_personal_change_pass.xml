<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <View
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="?attr/colorPrimary" />

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="50px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_gravity="center"
            android:textSize="26px"
            android:textColor="@color/text_color_black"
            android:text="旧密码"/>

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="460px"
            android:layout_height="88px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="phone"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="输入旧密码"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>



    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_gravity="center"
            android:textSize="26px"
            android:textColor="@color/text_color_black"
            android:text="新密码"/>


        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="560px"
            android:layout_height="88px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:hint="输入密码"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="32px"
            android:layout_gravity="center"
            android:background="@drawable/icon_login_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginStart="30px"
            android:layout_gravity="center"
            android:textSize="26px"
            android:textColor="@color/text_color_black"
            android:text="确认新密码"/>


        <EditText
            android:id="@+id/et_new_password_again"
            android:layout_width="560px"
            android:layout_height="88px"
            android:paddingLeft="25px"
            android:paddingRight="20px"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:hint="再次输入密码"
            android:textColorHint="@color/text_color_gray_2"
            android:textSize="24px"
            android:textColor="@color/colorPrimary1"
            android:background="@color/white"/>

        <!--</android.support.design.widget.TextInputLayout>-->

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        android:layout_marginRight="20px"
        android:layout_marginEnd="20px"
        android:layout_marginTop="31px"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="28px"
        android:background="@drawable/btn_effect_bg_blue" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20px"
        android:text="@string/copy_right"
        android:textSize="15px"
        android:textColor="@color/text_color_orange_light"/>

</com.zhy.autolayout.AutoLinearLayout>