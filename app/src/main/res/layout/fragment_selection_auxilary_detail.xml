<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_2"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <cn.chenhai.miaodj_monitor.view_custom.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="701px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginStart="24px"
                android:layout_marginRight="25px"
                android:layout_marginTop="24px"
                android:orientation="vertical"
                android:background="@drawable/copy_cardview">

                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_auxi_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38px"
                        android:layout_marginStart="38px"
                        android:layout_marginTop="42px"
                        android:singleLine="true"
                        android:textColor="@color/text_color_black"
                        android:textSize="26px"
                        android:text="配送单编号："/>


                    <TextView
                        android:id="@+id/tv_auxi_order_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210px"
                        android:layout_marginStart="210px"
                        android:layout_marginTop="44px"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="28px"
                        android:text="00124587145214"
                        android:textColor="@color/text_color_black_3"/>


                    <View
                        android:layout_width="636px"
                        android:layout_height="1dp"
                        android:layout_marginTop="92px"
                        android:layout_marginLeft="32px"
                        android:layout_marginRight="33px"
                        android:background="@drawable/line_dot" />


                </com.zhy.autolayout.AutoFrameLayout>

                <!-- ******************************************************* -->


                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_auxi_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38px"
                        android:layout_marginStart="38px"
                        android:layout_marginTop="24px"
                        android:singleLine="true"
                        android:textColor="@color/text_color_black"
                        android:textSize="26px"
                        android:text="发起配送时间："/>


                    <TextView
                        android:id="@+id/tv_auxi_delivery_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="222px"
                        android:layout_marginStart="222px"
                        android:layout_marginRight="41px"
                        android:layout_marginEnd="41px"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="28px"
                        android:text="2015-06-12 08:03"
                        android:textColor="@color/text_color_black_3"/>

                    <View
                        android:layout_width="636px"
                        android:layout_height="1dp"
                        android:layout_marginTop="76px"
                        android:layout_marginLeft="32px"
                        android:layout_marginRight="33px"
                        android:background="@drawable/line_dot" />

                </com.zhy.autolayout.AutoFrameLayout>


                <!-- ******************************************************* -->

                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="76px">

                    <TextView
                        android:id="@+id/tv_auxi_arrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38px"
                        android:layout_marginStart="38px"
                        android:layout_marginTop="24px"
                        android:singleLine="true"
                        android:textColor="@color/text_color_black"
                        android:textSize="26px"
                        android:text="预计到货日期："/>


                    <TextView
                        android:id="@+id/tv_auxi_arrive_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="222px"
                        android:layout_marginStart="222px"
                        android:layout_marginRight="41px"
                        android:layout_marginEnd="41px"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="28px"
                        android:text="2015-06-13 08:03"
                        android:textColor="@color/text_color_black_3"/>


                </com.zhy.autolayout.AutoFrameLayout>
                <!-- ******************************************************* -->
                <com.zhy.autolayout.AutoFrameLayout
                    android:id="@+id/ll_auxi_sign_for_time"
                    android:layout_width="match_parent"
                    android:layout_height="76px"
                    android:layout_marginBottom="15px">

                    <View
                        android:layout_width="636px"
                        android:layout_height="1dp"
                        android:layout_marginLeft="32px"
                        android:layout_marginRight="33px"
                        android:background="@drawable/line_dot" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38px"
                        android:layout_marginStart="38px"
                        android:layout_marginTop="24px"
                        android:singleLine="true"
                        android:textColor="@color/text_color_black"
                        android:textSize="26px"
                        android:text="签收时间："/>


                    <TextView
                        android:id="@+id/tv_auxi_sign_for_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180px"
                        android:layout_marginStart="180px"
                        android:layout_marginRight="41px"
                        android:layout_marginEnd="41px"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="28px"
                        android:text="2015-06-13 08:03"
                        android:textColor="@color/text_color_black_3"/>


                </com.zhy.autolayout.AutoFrameLayout>
                <!-- ******************************************************* -->




            </com.zhy.autolayout.AutoLinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_auxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btn_OK"
                android:layout_width="701px"
                android:layout_height="89px"
                android:layout_marginLeft="24px"
                android:layout_marginStart="24px"
                android:layout_marginTop="24px"
                android:layout_marginBottom="35px"
                android:background="@drawable/btn_effect_bg_blue_contrary"
                android:text="确认签收"
                android:textColor="@color/colorPrimary1"
                android:textSize="26px"
                android:textStyle="bold"/>


        </com.zhy.autolayout.AutoLinearLayout>

    </cn.chenhai.miaodj_monitor.view_custom.MyScrollView>
</com.zhy.autolayout.AutoLinearLayout>
