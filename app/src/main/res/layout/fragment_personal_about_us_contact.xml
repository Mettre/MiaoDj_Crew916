<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <View
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="?attr/colorPrimary" />

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/about_sdv"
            android:layout_width="match_parent"
            android:layout_height="300px"

            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/banner_p74"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:progressBarImage="@drawable/img_load"
            fresco:progressBarImageScaleType="focusCrop"
            fresco:progressBarAutoRotateInterval="3000"
            fresco:failureImage="@drawable/img_fail"
            fresco:failureImageScaleType="focusCrop"
            fresco:retryImage="@drawable/img_retry"
            fresco:retryImageScaleType="focusCrop" />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="75px"
            android:layout_marginStart="75px"
            android:layout_marginRight="75px"
            android:layout_marginEnd="75px"
            android:layout_marginTop="60px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="江苏薇甘菊电子商务有限公司"
            android:textColor="@color/text_color_black_3"
            android:textSize="24px" />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话："
                android:textColor="@color/text_color_black_3"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_team_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_us_phone"
                android:textColor="@color/colorPrimary1"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="总部地址："
            android:textColor="@color/text_color_black_3"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:text="江苏省苏州市工业园区新平街388号腾飞科技园21幢11F"
            android:textColor="@color/text_color_black_3"
            android:textSize="24px" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="苏州线下体验馆地址："
            android:textColor="@color/text_color_black_3"
            android:textSize="24px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:text="苏州市工业园区开源路36号（扬东路与开源路交叉口）"
            android:textColor="@color/text_color_black_3"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="上海线下体验店地址："
            android:textColor="@color/text_color_black_3"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:text="上海市宝山区泸太路5008弄38号梓坤科技园内"
            android:textColor="@color/text_color_black_3"
            android:textSize="24px" />

        </com.zhy.autolayout.AutoLinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15px"
            android:layout_marginBottom="20px"
            android:text="@string/copy_right"
            android:textSize="15px"
            android:textColor="@color/text_color_orange_light"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>