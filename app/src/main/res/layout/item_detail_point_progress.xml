<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.chenhai.miaodj_monitor.ui.view_custom.AutoCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="25px"
        android:layout_marginBottom="26px"
        android:layout_marginTop="20px"
        android:clickable="false"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="6dp">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginStart="32px"
                    android:layout_marginTop="41px"
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="施工工人："/>

                <TextView
                    android:id="@+id/item_tv_workerType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="193px"
                    android:layout_marginStart="193px"
                    android:layout_marginTop="41px"
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="暂无"/>

                <com.zhy.autolayout.AutoFrameLayout
                    android:layout_width="121px"
                    android:layout_height="51px"
                    android:orientation="horizontal"
                    android:layout_marginLeft="550px"
                    android:layout_marginStart="550px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="26px"
                    android:background="@drawable/layout_selecter_blue">

                    <TextView
                        android:id="@+id/item_tv_workerType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="20px"
                        android:text="- -"
                        android:textColor="@color/colorBluePrimaryCenter"/>

                </com.zhy.autolayout.AutoFrameLayout>

                <View
                    android:layout_width="636px"
                    android:layout_height="1dp"
                    android:layout_marginTop="99px"
                    android:layout_marginLeft="32px"
                    android:layout_marginStart="32px"
                    android:layout_marginRight="33px"
                    android:background="@drawable/line_dot" />

            </com.zhy.autolayout.AutoFrameLayout>

            <!-- ******************************************************* -->

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginStart="32px"
                    android:layout_marginTop="52px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="26px"
                    android:text="开始日期："/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195px"
                    android:layout_marginStart="195px"
                    android:layout_marginTop="28px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="预计"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195px"
                    android:layout_marginStart="195px"
                    android:layout_marginTop="74px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="实际"
                    android:textColor="@color/text_color_black"/>

                <TextView
                    android:id="@+id/item_tv_startDate_predict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="264px"
                    android:layout_marginStart="264px"
                    android:layout_marginTop="28px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="- -"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:id="@+id/item_tv_startDate_reality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="264px"
                    android:layout_marginStart="264px"
                    android:layout_marginTop="74px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="- -"
                    android:textColor="@color/text_color_black"/>


                <View
                    android:layout_width="636px"
                    android:layout_height="1dp"
                    android:layout_marginTop="128px"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="33px"
                    android:background="@drawable/line_dot" />


            </com.zhy.autolayout.AutoFrameLayout>

            <!-- ******************************************************* -->

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginStart="32px"
                    android:layout_marginTop="52px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="26px"
                    android:text="结束日期："/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195px"
                    android:layout_marginStart="195px"
                    android:layout_marginTop="28px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="预计"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195px"
                    android:layout_marginStart="195px"
                    android:layout_marginTop="74px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="实际"
                    android:textColor="@color/text_color_black"/>

                <TextView
                    android:id="@+id/item_tv_endDate_predict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="264px"
                    android:layout_marginStart="264px"
                    android:layout_marginTop="28px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="- -"
                    android:textColor="@color/text_color_black"/>
                <TextView
                    android:id="@+id/item_tv_endDate_reality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="264px"
                    android:layout_marginStart="264px"
                    android:layout_marginTop="74px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="- -"
                    android:textColor="@color/text_color_black"/>


                <View
                    android:layout_width="636px"
                    android:layout_height="1dp"
                    android:layout_marginTop="128px"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="33px"
                    android:background="@drawable/line_dot" />


            </com.zhy.autolayout.AutoFrameLayout>

            <!-- ******************************************************* -->

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginStart="32px"
                    android:layout_marginTop="32px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black"
                    android:textSize="26px"
                    android:text="当前状态："/>


                <TextView
                    android:id="@+id/item_tv_now_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="500px"
                    android:layout_marginLeft="192px"
                    android:layout_marginStart="192px"
                    android:layout_marginTop="32px"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="26px"
                    android:text="- -"
                    android:textStyle="bold"
                    android:textColor="@color/colorBluePrimaryCenter"/>

                <View
                    android:layout_width="610px"
                    android:layout_height="1dp"
                    android:layout_marginTop="85px"
                    android:layout_marginLeft="42px"
                    android:layout_marginRight="49px"
                    android:background="@drawable/line_dot" />

            </com.zhy.autolayout.AutoFrameLayout>

            <!-- ******************************************************* -->

            <com.zhy.autolayout.AutoLinearLayout
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/item_ll_status_hide">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/item_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <!-- ******************************************************* -->

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


    </cn.chenhai.miaodj_monitor.ui.view_custom.AutoCardView>
</com.zhy.autolayout.AutoLinearLayout>